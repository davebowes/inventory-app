{
  "name": "inventory-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "cf:dev": "npm run build && wrangler pages dev dist --compatibility-date=2025-11-11",
    "d1:migrate:local": "wrangler d1 migrations apply INVENTORY_DB --local",
    "d1:migrate:prod": "wrangler d1 migrations apply INVENTORY_DB",
    "d1:seed:local": "wrangler d1 execute INVENTORY_DB --local --file=seed/seed.sql",
    "d1:seed:prod": "wrangler d1 execute INVENTORY_DB --file=seed/seed.sql"
  },
  "dependencies": {
    "hono": "^4.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251230.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "wrangler": "^3.109.0"
  }
}
